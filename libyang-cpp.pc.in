prefix=@CMAKE_INSTALL_PREFIX@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@
libdir=${prefix}/@CMAKE_INSTALL_LIBDIR@

Name: @PROJECT_NAME@
Version: @LIBYANG_CPP_PKG_VERSION@
Description: C++ bindings for libyang
Requires.private: libyang
Libs: -L${libdir} -lyang-cpp
Libs.private: -lyang
Cflags: -I${includedir}

Name: @PROJECT_NAME@-utils
Version: @LIBYANG_CPP_PKG_VERSION@
Description: Utility functions for libyang-cpp
Requires.private: libyang-cpp >= @LIBYANG_CPP_PKG_VERSION@
Libs: -L${libdir}
Cflags: -I${includedir}
